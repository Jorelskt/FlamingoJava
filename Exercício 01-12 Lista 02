package exercicios;



import java.util.Scanner;



public class Exercicio10 {



/*1) Solicite um valor no teclado e exiba a area do

* Losango*/





public static void main(String[] args) {



Scanner sc = new Scanner(System.in);



System.out.println("Digite a dimensão da diagonal maior: ");

float diagonalM=sc.nextFloat();

System.out.println("Digite a dimensão da diagonal menor: ");

float diagonal=sc.nextFloat();

float area=diagonalM*diagonal/2;

System.out.println("A area do Losango é: "+area);

}



}

