11)
package exercicios;



import java.util.Scanner;



public class Exercicio11 {



/*1) Solicite os valores no teclado e exiba a area do

* Losango*/





public static void main(String[] args) {



Scanner sc = new Scanner(System.in);



System.out.println("Digite a dimensão da base maior: ");

float baseM=sc.nextFloat();

System.out.println("Digite a dimensão da base menor: ");

float base=sc.nextFloat();

System.out.println("Digite a altura: ");

float altura=sc.nextFloat();

float area=(baseM+base)*altura/2;

System.out.println("A area do Trapézio é: "+area);

}



}

