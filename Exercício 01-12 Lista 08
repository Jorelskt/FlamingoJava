package exercicio08;

import java.util.Scanner;

public class Exercicio02 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);

		int soma = 0;
		int algumNumero = 0;

		System.out.println("A soma dos 100 primeiros numero inteiros é: ");
		while (algumNumero <= 100) {
			soma += algumNumero;
			algumNumero++;
		}
		System.out.println(soma);

		sc.close();
	}
}
