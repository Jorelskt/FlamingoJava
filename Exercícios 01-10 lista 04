package exercicio04;

import java.util.Scanner;

public class Exercicio06 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		
		System.out.println("Digite o primeiro valor: ");
		int primeiroValor = sc.nextInt();
		System.out.println("Digite o segundo valor: ");
		int segundoValor = sc.nextInt();
		System.out.println("Digite o terceiro valor: ");
		int terceiroValor = sc.nextInt();
		int primeiraSoma=primeiroValor*primeiroValor;
		int segundoSoma=segundoValor*segundoValor;
		int terceiraSoma=terceiroValor*terceiroValor;
		System.out.println("A soma do 1º valor ao quadrado é: "+primeiraSoma+ "\nA soma do 2º valor ao quadrado é: "+segundoSoma+
				"\nA soma do 3º valor ao quadrado é: "+terceiraSoma);
	sc.close();
	}

	
}
