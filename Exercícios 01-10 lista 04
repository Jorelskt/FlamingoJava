package exercicio04;

import java.util.Scanner;

public class Exercicio05 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		
		System.out.println("Digite cotação do Dolar: ");
		float cotacaoDolar = sc.nextFloat();
		System.out.println("Digite o valor em real: ");
		float valorConversao=sc.nextFloat();
		float resultadoConversao= cotacaoDolar/valorConversao;
		System.out.println("O resultado da conversão é de $"+resultadoConversao);
	sc.close();

	}

}
