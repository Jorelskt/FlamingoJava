package exercicio05;

import java.util.Scanner;

public class Exercicio09 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner (System.in);
		
		System.out.println("Informe o numero de horas trabalhadas no mês: ");
		double horasMes = sc.nextDouble();
		System.out.println("Informe o salário por hora: ");
		double salarioHora = sc.nextDouble();
		double salarioFinal=horasMes*salarioHora*4;
		double salarioExtra=horasMes*50/100+salarioFinal;
		if (horasMes>40) {
			System.out.println("O Sálario total do Funcionario com as extras é de R$"+salarioExtra);
		} else {
			System.out.println("O Sálario total do Funcionario é de R$"+salarioFinal);
		}
sc.close();
	}

}
