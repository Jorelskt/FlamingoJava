package orientacaoAObjeto;

public class ExibirDadosComputador {

	public static void main(String[] args) {
		
		for (int i = 0; i < 3; i++) {
		
		Computador cadastro = new Computador();
		
		System.out.println("Marcas:"+cadastro.marca[i]);
		System.out.println("Memoria:"+cadastro.memoria[i]);
		System.out.println("Valor:"+cadastro.valor[i]);
		System.out.println("Processador:"+cadastro.processador[i]);
		System.out.println("Ano de Fabricação:"+cadastro.anoFabricacao[i]);
		System.out.println("");
		
		}

	}
}
