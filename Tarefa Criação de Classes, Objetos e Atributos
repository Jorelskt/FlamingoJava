package orientacaoAObjeto;

public class Bicicleta {

	String[] marca = {"GTS PRO M5", "Caloi", "Avance"};
	String[] cor = {"Preta", "Amarela e cinza", "Preta"};
	int[] aro = {29, 29, 30};
	String[] material = {"Alumínio", "Alumínio", "Alumínio"};
	String[] peso = {"14.5 kg", "15 kg", "15 kg" };
	
}
----------------------------------------------------------------------------------------------------------------------------------------------------------------------
6)
package orientacaoAObjeto;

public class ExibirDadosBicicleta {

	public static void main(String[] args) {

		for (int i = 0; i < 3; i++) {

			Bicicleta descricao = new Bicicleta();

			System.out.println("Marcas:" + descricao.marca[i]);
			System.out.println("Cor:" + descricao.cor[i]);
			System.out.println("Aro:" + descricao.aro[i]);
			System.out.println("Material:" + descricao.material[i]);
			System.out.println("Peso:" + descricao.peso[i]);
			System.out.println("");

		}
	}
}
