package orientacaoAObjeto;

public class Celular {

	String[] marca = { "Iphone", "Samsung" };
	String[] memoria = { "128gb", "64gb" };
	int[] valor = { 3400, 2200 };
	double[] software = { 15.00, 12.15 };
	int[] anoFabricacao = {2020, 2021};

}
--------------------------------------------------------------------------------------------------------------------------------------------------------------------
2)
package orientacaoAObjeto;

public class Computador {
		
	String[] marca = {"Dell", "Samsung", "Positivo"};
	String[] memoria = {"8gb ram", "16gb ram", "8gb ram"};
	int[] valor = {3400, 5325, 3220};
	String[] processador = {"Intel core i5", "Intel core i5", "Intel core i4"};
	int[] anoFabricacao = {2020, 2021, 2020};

}
-----------------------------------------------------------------------------------------------------------------------------------------------------------------------
3)
package orientacaoAObjeto;

public class ExibirDadosCelular {

	public static void main(String[] args) {
		
		for (int j = 0; j < 2; j++) {
			
		Celular cadastrado = new Celular();
		
		System.out.println("Marcas:"+cadastrado.marca[j]);
		System.out.println("Memória:"+cadastrado.memoria[j]);
		System.out.println("Valor:"+cadastrado.valor[j]);
		System.out.println("Software:"+cadastrado.software[j]);
		System.out.println("Ano de Fabricação:"+cadastrado.anoFabricacao[j]);
		System.out.println("");		
	}

}
}
